{
  "compilerOptions": {
    
    "target": "es5",
    "module": "commonjs",
    
    "typeRoots": ["./src/@types"],

    "strict": true,
    "esModuleInterop": true,
    
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "strictPropertyInitialization": false,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
